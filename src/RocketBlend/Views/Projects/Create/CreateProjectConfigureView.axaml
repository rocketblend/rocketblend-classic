<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RocketBlend.Views.Projects.Create.CreateProjectConfigureView">
    <StackPanel Spacing="10" Width="500" HorizontalAlignment="Left">
        
        <TextBlock
            Text="Configure your new project"
            FontSize="30"
            TextWrapping="Wrap"
            Foreground="#edecec"/>
        <TextBlock>Project name</TextBlock>
        <TextBox Text="{Binding ProjectName}"></TextBox>
        <TextBlock>Location</TextBlock>
        <TextBox Text="{Binding ProjectLocation}" Margin="0,0,10,0"></TextBox>
        <Button Padding="10,5" Command="{Binding OpenSelectFolderDialog}">...</Button>
        <WrapPanel>
            <ToggleButton Margin="0,0,10,0" IsChecked="{Binding OpenOnCreation}"></ToggleButton>
            <TextBlock>Open project after creation.</TextBlock>
        </WrapPanel>

    </StackPanel>
</UserControl>
